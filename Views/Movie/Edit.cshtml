@using AssignmentPRN222.Models;

@model Movie

<div class="container my-5 p-4 shadow-lg rounded bg-light">
    <h2 class="text-glow display-4 text-center">Edit Movie</h2>
    <hr />

    <form method="post">
        <div class="mb-3">
            <label asp-for="Name" class="form-label fw-bold">Movie Name</label>
            <input asp-for="Name" type="text" class="form-control custom-input" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Author" class="form-label fw-bold">Author</label>
            <input asp-for="Author" class="form-control custom-input" />
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Description" class="form-label fw-bold">Description</label>
            <textarea asp-for="Description" class="form-control custom-input" rows="3"></textarea>
        </div>

        <div class="mb-3">
            <label asp-for="Images" class="form-label fw-bold">Image URL</label>
            <input asp-for="Images" class="form-control custom-input" />
            <span asp-validation-for="Images" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Actor" class="form-label fw-bold">Actor</label>
            <input asp-for="Actor" class="form-control custom-input" />
            <span asp-validation-for="Actor" class="text-danger"></span>
        </div>

        <input asp-for="TimeMovie" type="hidden" class="form-control" />

        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-glow px-4">Save Changes</button>
            <a asp-action="Index" asp-controller="Movie" class="btn btn-secondary px-4">Back To List</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .custom-input {
        border-radius: 10px;
        padding: 10px;
        border: 2px solid #ff416c;
        transition: all 0.3s ease;
    }

        .custom-input:hover {
            border-color: #ff6a88;
            box-shadow: 0 0 10px rgba(255, 65, 108, 0.5);
        }

        .custom-input:focus {
            border-color: #ff416c;
            outline: none;
            box-shadow: 0 0 15px rgba(255, 65, 108, 0.8);
        }

    .text-glow {
        color: #ff416c;
        text-shadow: 0 0 10px rgba(255, 65, 108, 0.8);
    }

    .btn-glow {
        background: linear-gradient(45deg, #ff416c, #ff6a88);
        color: white;
        padding: 10px 20px;
        border-radius: 50px;
        font-size: 18px;
        box-shadow: 0 4px 10px rgba(255, 65, 108, 0.4);
        transition: all 0.3s ease;
    }

        .btn-glow:hover {
            background: linear-gradient(45deg, #ff6a88, #ff416c);
            box-shadow: 0 6px 20px rgba(255, 65, 108, 0.6);
            transform: scale(1.1);
        }

    .table-hover tbody tr:hover {
        background-color: #ffe6eb;
        transition: background 0.3s ease;
    }

    .custom-select {
        border-radius: 10px;
        padding: 10px;
        border: 2px solid #ff416c;
        transition: all 0.3s ease;
    }

        .custom-select:hover {
            border-color: #ff6a88;
            box-shadow: 0 0 10px rgba(255, 65, 108, 0.5);
        }

        .custom-select:focus {
            border-color: #ff416c;
            outline: none;
            box-shadow: 0 0 15px rgba(255, 65, 108, 0.8);
        }
</style>
