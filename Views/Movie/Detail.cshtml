@using AssignmentPRN222.Models;
@model Movie

<div class="container mt-5">
    <div class="row align-items-center">
        <!-- Hình ảnh phim -->
        <div class="col-md-5 text-center">
            @if (!string.IsNullOrEmpty(Model.Images))
            {
                <img src="@Model.Images" class="img-fluid rounded shadow-lg movie-poster" alt="@Model.Name">
            }
            else
            {
                <div class="bg-light text-center rounded shadow-lg movie-placeholder">
                    <p class="text-muted">No Image Available</p>
                </div>
            }
        </div>

        <!-- Thông tin phim -->
        <div class="col-md-7">
            <h1 class="text-primary fw-bold">@Model.Name</h1>
            <p class="text-muted"><i class="fas fa-user"></i> <strong>Diễn viên:</strong> @Model.Actor</p>
            <p class="text-muted"><i class="far fa-clock"></i> <strong>Thời lượng:</strong> @(Model.TimeMovie.Hour) tiếng @(Model.TimeMovie.Minute) phút</p>
            <p class="text-dark"><i class="fas fa-align-left"></i> <strong>Mô tả:</strong> @Model.Description</p>

            <!-- Nút mua vé -->
            <div class="mt-4">
                <a asp-controller="Movie" asp-action="BuyTicket" asp-route-movieId="@Model.Id" class="btn btn-danger btn-lg px-4 shadow">
                    🎟️ Mua Vé Ngay
                </a>
            </div>
        </div>
    </div>
</div>

<!-- CSS tùy chỉnh -->
<style>
    .movie-poster {
        width: 80%;
        max-height: 500px;
        object-fit: cover;
        transition: transform 0.3s ease-in-out;
    }

        .movie-poster:hover {
            transform: scale(1.05);
        }

    .movie-placeholder {
        width: 80%;
        height: 300px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 18px;
    }

    .btn-danger {
        background: linear-gradient(45deg, #ff416c, #ff4b2b);
        border: none;
        font-size: 18px;
        font-weight: bold;
        transition: all 0.3s ease;
    }

        .btn-danger:hover {
            background: linear-gradient(45deg, #ff4b2b, #ff416c);
            transform: translateY(-2px);
        }
</style>
