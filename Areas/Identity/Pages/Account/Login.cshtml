@page
@using AssignmentPRN222ntity.Pages.Account
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<div class="login-page">

    <div class="form-container">
        <h1>@ViewData["Title"]</h1>
        <section>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Password</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-check-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="btn btn-primary">Log in</button>
                </div>
                <div class="mt-3 text-center">
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                </div>
            </form>
        </section>
    </div>

</div>
<style>
    .login-page {
        margin: 0;
        padding: 0;
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        font-family: 'Arial', sans-serif;
    }

    .form-container {
        background: rgba(255, 255, 255, 0.95);
        padding: 2rem;
        border-radius: 15px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
        max-width: 500px;
        width: 100%;
        animation: bling 1.5s infinite alternate;
    }

    @@keyframes bling {
        0% {
            box-shadow: 0 0 20px rgba(255, 94, 120, 0.5);
        }

        100% {
            box-shadow: 0 0 30px rgba(255, 140, 75, 0.8);
        }
    }

    h1, h2 {
        text-align: center;
        color: #ff5e78;
        margin-bottom: 1.5rem;
        text-shadow: 0 0 10px rgba(255, 140, 75, 0.5);
    }

    hr {
        border: 0;
        height: 1px;
        background: #ff8c4b;
        margin-bottom: 1.5rem;
    }

    .form-floating {
        margin-bottom: 1.5rem;
    }

    .form-control {
        border: 2px solid #ff5e78;
        border-radius: 10px;
        padding: 1rem;
        font-size: 1rem;
        transition: border-color 0.3s ease;
    }

        .form-control:focus {
            border-color: #ff8c4b;
            box-shadow: 0 0 10px rgba(255, 140, 75, 0.5);
        }

    .btn-primary {
        background: #ff5e78;
        border: none;
        padding: 0.75rem;
        border-radius: 10px;
        width: 100%;
        font-size: 1.1rem;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background: #ff8c4b;
            transform: scale(1.05);
        }

    .text-danger {
        color: #d32f2f;
        font-size: 0.875rem;
        margin-top: 0.25rem;
        display: block;
    }
</style>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}