@model List<Discount>
@{
    Pager pager = new Pager();
    int pageNo = 1;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.currentPage;
    }
}

<div class="container my-5 p-4 shadow-lg rounded bg-light text-center">
    <h1 class="text-glow display-4">List Discount</h1>

    <div class="mb-4">
        <a asp-controller="Discount" asp-action="Create" class="btn btn-glow">
            Create Discount
        </a>
    </div>

    <div class="table-responsive">
        <table class="table table-hover table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Code</th>
                    <th>Price Discount</th>
                    <th>Available Quantity</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td>@obj.Name</td>
                        <td>$@obj.DiscountPrice</td>
                        <td>@obj.Quantity</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <nav>
        <ul class="pagination justify-content-center">
            @if (pageNo > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-controller="Discount" asp-route-page="@(pageNo - 1)" aria-label="Previous">&laquo;</a>
                </li>
            }
            @for (int i = pager.startPage; i <= pager.endPage; i++)
            {
                <li class="page-item @(i == pageNo ? "active" : "")">
                    <a class="page-link" asp-action="Index" asp-controller="Discount" asp-route-page="@i">@i</a>
                </li>
            }
            @if (pageNo < pager.totalPage)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-controller="Discount" asp-route-page="@(pageNo + 1)" aria-label="Next">&raquo;</a>
                </li>
            }
        </ul>
    </nav>
</div>

<style>
    /* Text Styling */
    .text-glow {
        color: #ff416c;
        text-shadow: 0 0 8px rgba(255, 65, 108, 0.8);
    }

    /* Button Styling */
    .btn-glow {
        background: linear-gradient(45deg, #ff416c, #ff6a88);
        color: white;
        padding: 12px 20px;
        border-radius: 30px;
        font-size: 18px;
        box-shadow: 0 4px 10px rgba(255, 65, 108, 0.3);
        transition: all 0.3s ease;
    }

        .btn-glow:hover {
            background: linear-gradient(45deg, #ff6a88, #ff416c);
            box-shadow: 0 6px 20px rgba(255, 65, 108, 0.5);
            transform: scale(1.05);
        }

    /* Form Styling */
    .form-glow {
        background: #fff;
        padding: 20px;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    .custom-input {
        border-radius: 10px;
        padding: 10px;
        border: 2px solid #ff416c;
        transition: all 0.3s ease;
    }

        .custom-input:hover {
            border-color: #ff6a88;
            box-shadow: 0 0 10px rgba(255, 65, 108, 0.5);
        }

        .custom-input:focus {
            border-color: #ff416c;
            outline: none;
            box-shadow: 0 0 15px rgba(255, 65, 108, 0.8);
        }

    /* Table Styling */
    .table-hover tbody tr:hover {
        background-color: #ffe6eb;
        transition: background 0.3s ease;
    }

    .table-glow {
        background: white;
        border-radius: 10px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
    }

    /* Container */
    .container-glow {
        background: #fff;
        padding: 20px;
        border-radius: 15px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
        margin-top: 20px;
    }

    /* Pagination Styling */
    .pagination .page-item.active .page-link {
        background: linear-gradient(45deg, #ff416c, #ff6a88);
        border-color: #ff416c;
    }

    .pagination .page-link {
        color: #ff416c;
        transition: all 0.3s ease;
    }

        .pagination .page-link:hover {
            background: #ffe6eb;
            color: #ff416c;
        }

</style>
