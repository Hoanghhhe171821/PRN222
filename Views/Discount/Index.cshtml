@model List<Discount>
@{
    Pager pager = new Pager();
    int pageNo = 1;
    if (ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.currentPage;
    }
}

<div class="container">
    <h1 class="my-4">List Discount</h1>

    <div class="mb-3">
        <a asp-controller="Discount" asp-action="Create" class="btn btn-primary">
            Create Discount
        </a>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Code</th>
                <th>Price Discount</th>
                <th>Available quantity</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.DiscountPrice</td>
                    <td>@obj.Quantity</td>

                </tr>
            }
        </tbody>
    </table>

    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            @if (pageNo > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-controller="Discount" asp-route-page="@(pageNo - 1)" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
            }

            @if (pager.totalPage > 0)
            {
                @for (int i = pager.startPage; i <= pager.endPage; i++)
                {
                    <li class="page-item @(i == pageNo ? "active" : "")">
                        <a class="page-link" asp-action="Index" asp-controller="Discount" asp-route-page="@i">@i</a>
                    </li>
                }
            }

            @if (pageNo < pager.totalPage)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="Index" asp-controller="Discount" asp-route-page="@(pageNo + 1)" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            }
        </ul>
    </nav>
</div>