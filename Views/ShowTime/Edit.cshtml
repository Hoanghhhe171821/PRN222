@using AssignmentPRN222.Models;

@model ShowTime

<div class="container">
    <form method="post">
        <div class="border p-3 mt-4">
            <h2 class="text-primary">Edit ShowTime</h2>
            <hr />

            <input asp-for="MovieId" type="hidden" />
            <input asp-for="CinemaId" type="hidden" />
            <input asp-for="RoomId" type="hidden" />

            <div class="mb-3">
                <label asp-for="DateShowTime" class="form-label">Date Show Time</label>
                <input asp-for="DateShowTime" type="date" class="form-control" />
                <span asp-validation-for="DateShowTime" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="StartTime" class="form-label">Start Time</label>
                <input asp-for="StartTime" type="time" class="form-control" />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PriceA" class="form-label">Price A</label>
                <input asp-for="PriceA" type="text" class="form-control" />
                <span asp-validation-for="PriceA" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PriceB" class="form-label">Price B</label>
                <input asp-for="PriceB" type="text" class="form-control" />
                <span asp-validation-for="PriceB" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Edit</button>
            <a asp-action="Index" asp-controller="ShowTime" class="btn btn-secondary">Back To List</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}